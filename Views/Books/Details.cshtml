@model WSMS.Data.Entities.Book

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>

    @foreach (var chapter in Model.Chapters.OrderBy(c => c.ChapterNumber))
    {
        <div class="row">
            <div class="col-12">
                <p class="lead">@chapter.ChapterNumber</p>
                <p>
                @foreach (var verse in chapter.Verses.OrderBy(v => v.VerseNumber))
                {
                    @verse.VerseNumber<span>&period;</span> @verse.Text
                }
                </p>
            </div>
        </div>
    }
    
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
